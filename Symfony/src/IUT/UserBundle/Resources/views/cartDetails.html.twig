{% extends('IUTappBundle::layout.html.twig') %}

{% block title %}
    Panier
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-sm-12">
            <h1 class="text-center">Panier</h1>
        </div>
    </div>



    {% if nbItems > 0 %}

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Enregistrement</th>
                            <th>Prix</th>
                            <th>Supprimer</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for record in records %}
                            <tr>
                                <td>{{ record.titre }}</td>
                                <td>{{ record.prix }} €</td>
                                <td><a href="{{ path('cart_remove', {'idRecord' : record.codeEnregistrement}) }}" class="btn btn-danger "><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('cart_clean') }}" class="btn btn-warning col-md-3 col-md-offset-2">Vider le panier</a>
            <a href="{{ path('cart_pay') }}" class="btn btn-success col-md-3 col-md-offset-2">Acheter : {{ price }} €</a>
        </div>
    </div>

    {% else %}
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info text-center">
                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                    Aucun article dans le panier
                </div>
            </div>
        </div>

    {% endif %}

{% endblock %}

