{% extends('IUTappBundle::layout.html.twig') %}

{% block title %}
    {{ album.titreAlbum}}
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-4 col-md-offset-1">
            <img src="{{ path('rt_music_generatePicture', {'class':'Album', 'id' : album.codeAlbum}) }}" alt="pochette de l'album {{ album.titreAlbum }}" >
        </div>

        <div class="col-md-6">
            <div class="row">
                <h1>{{ album.titreAlbum }}</h1>

            </div>
            <div class="row">
                <p>Année : {{ album.annéeAlbum }}</p>
                <p>Genre : <a href="{{ path('catalog_genre_details', {'id' : album.codeGenre.codeGenre }) }}">
                        {{ album.codeGenre.libelléAbrégé }}
                    </a></p>
                <p>Editeur : {{ album.codeEditeur.nomEditeur }}</p>
                <p>Code ASIN: {{ album.ASIN }}</p>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            <div class="alert alert-danger" role="alert">
                L'achat des morceaux n'est pas encore disponible
            </div>
            <div class="alert alert-danger" role="alert">
                L'achat de l'album sur Amazon n'est pas encore disponible
            </div>
        </div>
    </div>

    {{ dump(it) }}

    <div class="row">
        <div class="col-md-12">

            {% for disque in disques %}
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center"><a href="{{ path('catalog_disque_details', {'id' : disque['disc'].codeDisque}) }}">{{ disque['disc'].référenceAlbum }} {{ disque['disc'].référenceDisque }}</a></h2>
                </div>

            </div>

            <div class="row">
                <div class="com-md-12">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Durée</th>
                                    <th>Prix</th>
                                    <th>Extrait</th>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>
                            {%  for enregistrement in disque['records'] %}
                            <tr>
                                <td>{{ enregistrement.Titre }}</td>
                                <td>{{ enregistrement.durée }}</td>
                                <td>{{ enregistrement.prix }}</td>
                                <td><audio controls><source src="{{ path('catalog_default_generateTrack', {'id' : enregistrement.codeEnregistrement}) }}" type="audio/mpeg"></audio></td>
                            </tr>
                            {% endfor %}
                            </tbody>

                        </table>

                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading"><h2 class="text-center"><a href=" {{ it["DetailPageURL"] }}">Détails sur le produit</a></h2></div>

                <table class="table table-hover">

                <tbody>
                    <tr><td>Classement des meilleures ventes Amazon en Musique : {{ it["SalesRank"] }}</td></tr>
                    <tr><td>{{ it["ItemAttributes"]["Binding"] }}</td></tr>
                    <tr><td>Label : {{ it["ItemAttributes"]["Brand"] }}</td></tr>
                    <tr><td>Langue : {{ it["ItemAttributes"]["Languages"]["Language"]["Name"] }}</td></tr>

                    {% for creator in it["ItemAttributes"]["Creator"] %}
                    <tr><td>{{ creator["Role"] }} : {{ creator["_"] }}</td></tr>
                    {% endfor %}

                    {% for feature in it["ItemAttributes"]["Feature"] %}
                    <tr><td>{{ feature }}</td></tr>
                    {% endfor %}


                </tbody>
                </table>
                </div>
            </div>


            {{ dump (it["ItemAttributes"]) }}


            {% endfor %}
        </div>
    </div>






{% endblock %}