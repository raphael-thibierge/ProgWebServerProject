{% extends('IUTappBundle::layout.html.twig') %}

{% block title %}
    Instruments
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Liste des instruments</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr><td><strong>Nom</strong></td></tr>
                    </thead>
                    <tbody>
                    {%  for instrument in instruments %}
                        <tr>
                            <td><a href="{{ path('catalog_instrument_details', {'id' : instrument.codeInstrument }) }}">{{ instrument.nomInstrument }}</a></td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}