{% extends('IUTappBundle::layout.html.twig') %}

{% block title %}
    {{ musicien.prénomMusicien }} {{ musicien.nomMusicien }}
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">{{ musicien.prénomMusicien }} {{ musicien.nomMusicien }}</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <img src="{{ path('rt_music_generatePicture', {'class':'Musicien', 'id' : musicien.codeMusicien}) }}" alt="photo du musicien {{ musicien.prénomMusicien }} {{ musicien.nomMusicien }}">

        </div>
    {#</div>#}

    {#<div class="row">#}
        <div class="col-md-8">
            <div class="jumbotron">
                <p>Prénom : {{ musicien.prénomMusicien }}</p>
                <p>Nom : {{ musicien.nomMusicien }}</p>
                <p>Année de naissance : {% if musicien.annéeNaissance != null %}{{ musicien.annéeNaissance }}{% else %} <span class="text-danger">Non renseigné</span>{% endif %}</p>
                <p>Année de mort : {% if musicien.annéeMort != null %}{{ musicien.annéeMort }}{% else %} <span class="text-danger">Non renseigné</span>{% endif %}</p>
                <p>Pays : {{ musicien.codePays }}</p>
            </div>
        </div>
    </div>

    {% if oeuvresComposed is not empty %}
        <div class="row">
            <div class="col-md-12">
                <h2>Oeuvres composées</h2>

                <ul>
                {% for oeuvre in oeuvresComposed %}
                    <li><a href="{{ path('catalog_oeuvre_details', {'id' : oeuvre.codeOeuvre}) }}">{{ oeuvre.titreOeuvre }}</a></li>
                {% endfor %}
                </ul>


        </div>
    </div>
    {% endif %}


    {% if orchestras is not empty %}

            <div class="row">
                <div class="col-md-12">
                    <h2>Orchestres dirigés</h2>

                    <ul>
                    {% for orchestre in orchestras %}
                        <li><a href="{{ path('catalog_orchestre_details', {'id' : orchestre.codeOrchestre}) }}">{{ orchestre.nomOrchestre }}</a></li>
                    {% endfor %}
                    </ul>
        </div>
    </div>
    {% endif %}


    {% if albumsComposed is not empty %}

            <div class="row">
                <div class="col-md-12">
                    <h2>Albums composés</h2>

                    <div class="row">
                        <div class="col-md-12">
                            {% set cpt = 1 %}
                            {% set nbPanel = 6 %}
                            {% for album in albumsComposed %}
                                {% if cpt % nbPanel == 0 %}<div class="row">{% endif %}
                                {# album card#}
                                <div class="col-md-2">
                                    <div class="panel panel panel-default">

                                        {# picture #}
                                        <div class="panel-heading">
                                            <div class="row">
                                                <a class="text-center" href="{{ path('rt_music_album_details', {'id' : album.codeAlbum}) }} ">
                                                    <img width="100px" height="100px" class="img-rounded center-block"   src="{{ path('rt_music_generatePicture', {'class':'Album', 'id' : album.codeAlbum}) }}" alt="photo de l'album {{ album.titreAlbum }}">
                                                </a>
                                            </div>
                                        </div>

                                        {# Infos #}
                                        <div class="panel-body">
                                            <p class="text-center"><strong><a href="{{ path('rt_music_album_details', {'id' : album.codeAlbum}) }}">{{ album.titreAlbum }}</a></strong></p>
                                        </div>
                                    </div>
                                </div>
                                {# end album card #}

                                {# close new line #}
                                {% if cpt % nbPanel == 0 %}</div>{% endif %}
                                {% set cpt = cpt + 1 %}
                            {% endfor %}
                        </div>
                    </div>


        </div>
    </div>
    {% endif %}

    {% if albumsInterpreted is not empty %}
        <div class="row">
            <div class="col-md-12">
                <h2>Albums interprétés</h2>
                    <div class="row">
                        <div class="col-md-12">
                            {% set cpt = 1 %}
                            {% set nbPanel = 6 %}
                            {% for album in albumsInterpreted %}
                                {% if cpt % nbPanel == 0 %}<div class="row">{% endif %}
                                {# album card#}
                                <div class="col-md-2">
                                    <div class="panel panel panel-default">

                                        {# picture #}
                                        <div class="panel-heading">
                                            <div class="row">
                                                <a class="text-center" href="{{ path('rt_music_album_details', {'id' : album.codeAlbum}) }} ">
                                                    <img width="100px" height="100px" class="img-rounded center-block"   src="{{ path('rt_music_generatePicture', {'class':'Album', 'id' : album.codeAlbum}) }}" alt="photo de l'album {{ album.titreAlbum }}">
                                                </a>
                                            </div>
                                        </div>

                                        {# Infos #}
                                        <div class="panel-body">
                                            <p class="text-center"><strong><a href="{{ path('rt_music_album_details', {'id' : album.codeAlbum}) }}">{{ album.titreAlbum }}</a></strong></p>
                                        </div>
                                    </div>
                                </div>
                                {# end album card #}

                                {# close new line #}
                                {% if cpt % nbPanel == 0 %}</div>{% endif %}
                                {% set cpt = cpt + 1 %}
                            {% endfor %}
                        </div>
                    </div>
        </div>
    </div>
    {% endif %}


    {% if albumsConducted is not empty %}
            <div class="row">
                <div class="col-md-12">
                    <h2>Albums dirigés</h2>

                    <div class="row">
                        <div class="col-md-12">

                            {% set cpt = 1 %}
                            {% set nbPanel = 6 %}
                            {% for album in albumsConducted %}
                                {% if cpt % nbPanel == 0 %}<div class="row">{% endif %}
                                {# album card#}
                                <div class="col-md-2">

                                    <div class="panel panel panel-default">

                                        {# picture #}
                                        <div class="panel-heading">
                                            <div class="row">
                                                <a class="text-center" href="{{ path('rt_music_album_details', {'id' : album.codeAlbum}) }} ">
                                                    <img width="100px" height="100px" class="img-rounded center-block"   src="{{ path('rt_music_generatePicture', {'class':'Album', 'id' : album.codeAlbum}) }}" alt="photo de l'album {{ album.titreAlbum }}">
                                                </a>
                                            </div>
                                        </div>

                                        {# Infos #}
                                        <div class="panel-body">
                                            <p class="text-center"><strong><a href="{{ path('rt_music_album_details', {'id' : album.codeAlbum}) }}">{{ album.titreAlbum }}</a></strong></p>
                                        </div>
                                    </div>
                                </div>
                                {# end album card #}

                                {# close new line #}
                                {% if cpt % nbPanel == 0 %}</div>{% endif %}
                                {% set cpt = cpt + 1 %}
                            {% endfor %}
                        </div>
                    </div>

        </div>
    </div>
    {% endif %}

{% endblock %}