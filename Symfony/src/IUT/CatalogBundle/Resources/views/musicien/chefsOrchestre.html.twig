{% extends('IUTappBundle::layout.html.twig') %}

{% block title %}
    Chefs d'orchestre
{% endblock %}

{% block body %}


    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Liste des chefs d'orchestre</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger" role="alert">
                Certains chefs d'orchestre peuvent ne pas en être ! ( à vérifier, exemple : lettre B )
            </div>
        </div>
    </div>


    {#  Generation de la barre pour l'ordre alphabétique    #}
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <nav class="block-center">
                <ul class="pagination">
                    {% set letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ"|split('')  %}
                    {% for alphabeticLetter in letters %}
                        <li {% if letter == alphabeticLetter %} class="active" {% endif %}>
                            <a href="{{ path('catalog_musicien_chefsOrchestre_byLetter', {'letter' : alphabeticLetter}) }}">
                                {{ alphabeticLetter }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        </div>
    </div>

    <div class="row">
    <div class="col-md-12">
    <div class="table-responsive">
    <table class="table table-hover">
    <thead>
    <tr><td></td><td>Nom</td><td>Prénom</td></tr>
    </thead>
    <tbody>
    {% for chefOrchestre in chefsOrchestre %}
        <tr>
        <td><img width="100px" height="100px" class="img-circle"   src="{{ path('rt_music_generatePicture', {'class':'Musicien', 'id' : chefOrchestre.codeMusicien}) }}"
                 alt="photo de {{ chefOrchestre.prénomMusicien }} {{ chefOrchestre.nomMusicien }}">
        </td>
        <td><a href="{{ path('rt_music_musicien_details_page', {'id' : chefOrchestre.codeMusicien}) }}">{{ chefOrchestre.nomMusicien }}</a></td>
        <td>{{ chefOrchestre.prénomMusicien }}</td>
    </tr>
    {% endfor %}
    </tbody>
    </table>
    </div>
    </div>
    </div>


    {% endblock %}