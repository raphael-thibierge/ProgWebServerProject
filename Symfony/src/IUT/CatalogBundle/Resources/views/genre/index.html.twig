{% extends('IUTappBundle::layout.html.twig') %}

{% block title %}
    Genres
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Liste des genres</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr><td><strong>Nom</strong></td></tr>
                    </thead>
                    <tbody>
                    {%  for genre in genres %}
                        <tr>
                            <td><a href="{{ path('catalog_genre_details', {'id' : genre.codeGenre }) }}">{{ genre.libelléAbrégé }}</a></td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}